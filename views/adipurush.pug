doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Rating, Review and Trailer | Filmfy.co
        //- link css
        link(rel="stylesheet", href="../static/style.css")
        link(rel="stylesheet", href="../static/movies.css")
    body
        nav.navbar
          ul#ul-1
            li
              img.logo(src='../static/logo.png' alt='err loading logo')
            li
                h1 Filmfy.com
          ul#ul-2
            li
              a(href='/')
                ion-icon(name='home')
                | Home
            li
              a(href='/usage')
                | We Use
            li
              a(href='/hrm') High Rating movies
            li
              a(href='/contact') Contact
        hr(style='margin: 20px;')

        //- jawan
        h1 Adipurush
        hr(style='margin: 20px;')

        section.video
          video(controls='' controlslist='nodownload' autoplay='' muted='' loop)
            source(type='video/mp4' src='../static/trailers/a.mp4')

        section.details
          #type
            span Action
            span Adventure
            span Drama
          #discription
            span A modern adaptation of the Indian epic Ramayana which follows the exiled prince Raghav's journey to rescue his wife Janaki from the raakshash king Lankesh.

          #ratings
            <ion-icon name="star"></ion-icon>
            <ion-icon name="star"></ion-icon>
            <ion-icon name="star"></ion-icon>
            <ion-icon name="star-half"></ion-icon>
            span 3.4

          #direct
            .qn
              span.ques Director
              span.names Om Raut
              hr
            .qn
              span.ques Writers
              span.names Manoj Muntashir . Om Raut
              hr
            .qn
              span.ques Stars
              span.names Kriti Sanon . Saif Ali Khan . Prabhas
          #photos
            h1 Photos 
              ion-icon(name="chevron-forward")
            img(src="../static/photos/a_photo1.webp", alt="err loading image")
            img(src="../static/photos/a_photo2.jpg", alt="err loading image")
            img(src="../static/photos/a_photo3.webp", alt="err loading image")

        footer
          strong Filmfy Copyright &copy; 2023
          span owner vaibhav verma

